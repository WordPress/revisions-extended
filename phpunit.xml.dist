<phpunit
    bootstrap="phpunit/bootstrap.php"
    backupGlobals="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
>
    <testsuites>
        <testsuite name="default">
            <directory prefix="test-" suffix=".php">./phpunit</directory>
        </testsuite>
    </testsuites>
</phpunit>
